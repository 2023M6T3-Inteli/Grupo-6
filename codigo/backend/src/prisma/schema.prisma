generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  name        String
  role        String
  about_me    String?
  email       String        @unique
  password    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  badges      Badges[]      @relation("UserBadges")
  posts       Post[]
  hard_skills hard_skills[] @relation("UserHardSkills")
  soft_skills soft_skills[] @relation("UserSoftSkills")
}

model Badges {
  id          String @id @default(uuid())
  picture     String
  type        String
  description String
  users       User[] @relation("UserBadges")
}

model Post {
  id          String   @id @default(uuid())
  title       String
  description String
  category    String
  createdAt   DateTime @default(now())
  creator     String
  author      User     @relation(fields: [creator], references: [id])
}


model hard_skills {
  id         String @id @default(uuid())
  hard_skill String
  user       User[] @relation("UserHardSkills")
}

model soft_skills {
  id         String @id @default(uuid())
  soft_skill String
  user       User[] @relation("UserSoftSkills")
}
